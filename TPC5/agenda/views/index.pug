extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 ToDo List
    .w3-container
      form(action='/add', method='post')
        input(type='date', name='limitDate', placeholder='Select a deadline', value= edit ? edit.limitDate : '')
        input(type='text', name='creator', placeholder='Creator', required='required', value= edit ? edit.creator : '')
        input(type='text', name='task', placeholder='Task', required='required', value= edit ? edit.task : '')
        input(type='text', name='taskType', placeholder='Task type', required='required', value= edit ? edit.taskType : '')
        if edit
          input(type='hidden', name='id', value=edit.createdDate)
          input(type='submit', value='Edit')
        else
          input(type='submit', value='Add')
    .w3-container
      h1 ToDo Tasks
      table.w3-table.w3-striped.w3-bordered.w3-border.w3-hoverable.w3-white
        tr
          th CreatedDate
          th Deadline
          th Creator
          th Task
          th Task type
          th
        each task in tasks
          tr
            td= task.createdDate
            td= task.limitDate
            td= task.creator
            td= task.task
            td= task.taskType
            td
              form(action='/done', method='post')
                input(type='hidden', name='id', value=task.createdDate)
                input(type='submit', value='Done')
              form(action='/edit', method='post')
                input(type='hidden', name='id', value=task.createdDate)
                input(type='submit', value='Edit')
    .w3-container
      h1 Done Tasks
      table.w3-table.w3-striped.w3-bordered.w3-border.w3-hoverable.w3-white
        tr
          th CreatedDate
          th Deadline
          th Creator
          th Task
          th Task type
          th
        each task in tasksDone
          tr
            td= task.createdDate
            td= task.limitDate
            td= task.creator
            td= task.task
            td= task.taskType
            td
              form(action='/ndone', method='post')
                input(type='hidden', name='id', value=task.createdDate)
                input(type='submit', value='Not Done')
              form(action='/delete', method='post')
                input(type='hidden', name='id', value=task.createdDate)
                input(type='submit', value='Delete')
    footer.w3-container.w3-teal
